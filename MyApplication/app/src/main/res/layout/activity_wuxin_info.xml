<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.percent.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/whitesmoke"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/top_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:background="#ff44aacc"
            app:layout_heightPercent="10%"
            app:layout_widthPercent="100%"/>
        <Button
            android:id="@+id/back_button_wuxin"
            style="@style/Button_background_title"
            android:onClick="onClick"
            android:text="@string/back"
            android:textSize="20dp"
            app:layout_heightPercent="8%"
            app:layout_marginLeftPercent="1%"
            app:layout_marginTopPercent="1%"
            app:layout_widthPercent="15%"
            android:layout_alignBaseline="@+id/wuxin_textView"
            android:layout_alignBottom="@+id/wuxin_textView"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/wuxin_textView"
            style="@style/map_button"
            android:textSize="25dp"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="0dp"
            app:layout_heightPercent="8%"
            app:layout_widthPercent="50%"
            app:layout_marginTopPercent="1%"
            android:layout_centerHorizontal="true"
            android:text="关于Woostar"/>
        <TextView
            android:id="@+id/balance_text"
            style="@style/Text_black"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:clickable="false"
            android:gravity="start"
            android:text="@string/wuxindianqi"
            android:textSize="12sp"
            app:layout_heightPercent="60%"
            app:layout_marginTopPercent="15%"
            app:layout_widthPercent="90%"
        />


    </android.support.percent.PercentRelativeLayout>

</LinearLayout>