<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wuxindianqi.administrator.chargingstationapp.view.activity.UserInfoActivity">
    <android.support.percent.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/whitesmoke"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/top_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:background="#ff44aacc"
            app:layout_heightPercent="10%"
            app:layout_widthPercent="100%"/>
        <Button
            android:id="@+id/back_button"
            style="@style/Button_background_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="onClick"
            android:text="@string/back"
            android:textSize="20dp"
            app:layout_heightPercent="8%"
            app:layout_marginLeftPercent="1%"
            app:layout_marginTopPercent="1%" app:layout_widthPercent="15%"/>
        <Button
            android:id="@+id/finished_button"
            style="@style/Button_background_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            android:onClick="onClick"
            android:text="@string/finished"
            android:textSize="20dp"
            app:layout_heightPercent="8%"
            app:layout_marginRightPercent="3%"
            app:layout_marginTopPercent="1%" app:layout_widthPercent="15%"/>
        <TextView
            android:id="@+id/textView"
            style="@style/map_button"
            android:textSize="25dp"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="0dp"
            app:layout_heightPercent="8%"
            app:layout_widthPercent="30%"
            app:layout_marginTopPercent="1%"
            android:layout_centerHorizontal="true"
            android:text="@string/personalsettings"/>

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/sencond_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@color/white"
            app:layout_marginTopPercent="15%"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="100%">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="0.3dp"
                android:background="@color/gainsboro"
                app:layout_marginLeftPercent="5%"
                app:layout_marginTopPercent="50%"
                app:layout_widthPercent="100%"/>
            <TextView
                style="@style/Transparent_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:text="@string/nickname"
                android:textSize="20dp"
                app:layout_heightPercent="50%"
                app:layout_marginLeftPercent="5%" app:layout_widthPercent="100%"/>
            <EditText
                android:id="@+id/nick_name_text"
                style="@style/Input_EditText_Configuration"
                android:layout_alignParentEnd="true"
                android:clickable="false"
                android:gravity="center"
                android:text="@string/inputnickname"
                android:textSize="20sp"
                app:layout_heightPercent="50%"
                app:layout_widthPercent="50%"
            />
            <TextView
                android:id="@+id/sex_title"
                style="@style/Text_black"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:text="@string/sex"
                android:textSize="20dp"
                app:layout_heightPercent="50%"
                app:layout_marginLeftPercent="5%"
                app:layout_marginTopPercent="50%"
                app:layout_widthPercent="20%"/>
            <android.support.v7.widget.SwitchCompat
                android:id="@+id/sc_switch_compat"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentRight="true"
                android:longClickable="false"
                android:onClick="onClick"
                android:textColor="@color/white"
                android:textOff="男"
                android:textOn="女"
                android:textSize="20dp"
                app:layout_heightPercent="50%"
                app:layout_marginRightPercent="15%"
                app:layout_marginTopPercent="50%"
                app:layout_widthPercent="20%"
                app:showText="true"
                app:switchTextAppearance="@style/SwitchCompat.Text"
                app:theme="@style/SwitchCompat.Control"/>
        </android.support.percent.PercentRelativeLayout>

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/thrid_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_heightPercent="30%"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:layout_marginTopPercent="40%"
            app:layout_widthPercent="100%">
            <TextView
                android:id="@+id/phone_title"
                style="@style/Transparent_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:text="@string/phone"
                android:textSize="20dp"
                app:layout_heightPercent="33%"
                app:layout_marginLeftPercent="5%"
                app:layout_widthPercent="40%"/>
            <TextView
                android:id="@+id/phone_text"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentRight="true"
                android:clickable="false"
                android:gravity="center"
                android:textColor="@color/base_color"
                android:textSize="20dp"
                app:layout_heightPercent="33%"
                app:layout_widthPercent="50%"
            />
            <TextView
                style="@style/Transparent_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:text="@string/email"
                android:textSize="20dp"
                app:layout_heightPercent="33%"
                app:layout_marginLeftPercent="5%"
                app:layout_marginTopPercent="33.33%"
                app:layout_widthPercent="100%"/>
            <EditText
                android:id="@+id/email_text"
                style="@style/Transparent_button"
                android:layout_alignParentRight="true"
                android:clickable="false"
                android:gravity="center"
                android:text="@string/inputemail"
                android:textSize="20dp"
                app:layout_heightPercent="33%"
                app:layout_marginTopPercent="33.33%"
                app:layout_widthPercent="50%"
            />
            <Button
                android:id="@+id/modifypassword_button"
                style="@style/Button_background_white"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:text="@string/modifypassword"
                android:textSize="20dp"
                app:layout_heightPercent="33%"
                app:layout_marginLeftPercent="5%"
                app:layout_marginTopPercent="66.66%"
                app:layout_widthPercent="100%"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="0.3dp"
                android:background="@color/gainsboro"
                app:layout_marginLeftPercent="5%"
                app:layout_marginTopPercent="33.33%"
                app:layout_widthPercent="100%"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="0.3dp"
                app:layout_marginLeftPercent ="5%"
                app:layout_marginTopPercent="66.66%"
                app:layout_widthPercent="100%"
                android:background="@color/gainsboro"/>

        </android.support.percent.PercentRelativeLayout>




    </android.support.percent.PercentRelativeLayout>

</LinearLayout>
