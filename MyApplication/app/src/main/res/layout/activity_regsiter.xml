<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.percent.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/whitesmoke"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/top_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:background="#ff44aacc"
            app:layout_heightPercent="10%"
            app:layout_widthPercent="100%"/>
        <android.support.percent.PercentRelativeLayout
            android:id="@+id/sencond_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_marginTopPercent="15%"
            app:layout_heightPercent="30%"
            app:layout_widthPercent="100%">

            <TextView
                android:layout_width="0dp"
                android:layout_height="0.3dp"
                android:background="@color/gainsboro"
                app:layout_marginLeftPercent="5%"
                app:layout_marginTopPercent="33%"
                app:layout_widthPercent="100%"/>
            <TextView
                android:layout_width="0.3dp"
                android:layout_height="0dp"
                app:layout_marginLeftPercent="31%"
                android:background="@color/gainsboro"
                app:layout_marginTopPercent="3%"
                app:layout_heightPercent="27%"/>
            <TextView
                android:layout_width="0.3dp"
                android:layout_height="0dp"
                app:layout_marginLeftPercent="31%"
                android:background="@color/gainsboro"
                app:layout_marginTopPercent="36%"
                app:layout_heightPercent="27%"/>
            <TextView
                style="@style/Transparent_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:text="@string/phonenumber"
                android:textSize="20sp"
                app:layout_heightPercent="33%"
                app:layout_marginLeftPercent="5%"
                app:layout_widthPercent="25%"/>
            <EditText
                android:id="@+id/phone_number_edittext_register"
                style="@style/Input_EditText_Configuration"
                android:hint="@string/pleaseinputphone"
                app:layout_heightPercent="33%"
                app:layout_marginLeftPercent="32%"
                app:layout_widthPercent="68%"
                android:inputType="phone"/>
            <EditText
                android:id="@+id/password_edittext_register"
                style="@style/Input_EditText_Configuration"
                android:hint="@string/pleaseinputpassword"
                app:layout_heightPercent="33%"
                app:layout_marginTopPercent="33%"
                app:layout_marginLeftPercent="32%"
                app:layout_widthPercent="68%"
                android:inputType="textPassword"/>
            <EditText
                android:id="@+id/verifycode_edittext_register"
                style="@style/Input_EditText_Configuration"
                android:gravity="center_vertical"
                app:layout_heightPercent="66%"
                android:maxLength="6"
                app:layout_marginTopPercent="66%"
                app:layout_marginLeftPercent="35%"
                app:layout_widthPercent="35%"
                android:inputType="number"/>
            <Button
                android:id="@+id/obtain_verifycode_button_regsiter"
                style="@style/Button_background_white"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignEnd="@+id/signin_button"
                android:onClick="onClick"
                android:text="@string/obtainCode"
                android:textColor="@color/base_color"
                android:textSize="15sp"
                app:layout_heightPercent="33%"
                app:layout_marginLeftPercent="70%"
                app:layout_marginTopPercent="66%" app:layout_widthPercent="25%"/>
            <TextView
                style="@style/Text_black"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:text="@string/userpassword"
                android:textSize="20sp"
                app:layout_heightPercent="33%"
                app:layout_marginLeftPercent="5%"
                app:layout_marginTopPercent="33%"
                app:layout_widthPercent="25%"/>
            <TextView
                style="@style/Text_black"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:text="@string/verifycode"
                android:textSize="20sp"
                app:layout_heightPercent="33%"
                app:layout_marginLeftPercent="5%"
                app:layout_marginTopPercent="66%"
                app:layout_widthPercent="30%"/>
        </android.support.percent.PercentRelativeLayout>
        <Button
            android:id="@+id/back_button_register"
            style="@style/Button_background_title"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:onClick="onClick"
            android:text="@string/back"
            android:textSize="20sp"
            app:layout_heightPercent="8%"
            app:layout_marginLeftPercent="1%" app:layout_marginTopPercent="1%"
            app:layout_widthPercent="15%"/>
        <Button
            android:id="@+id/signin_button_register"
            style="@style/Button_background_title"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:layout_alignParentRight="true"
            android:onClick="onClick"
            android:text="@string/signin"
            android:textSize="20sp"
            app:layout_heightPercent="8%"
            app:layout_marginRightPercent="1%"
            app:layout_marginTopPercent="1%" app:layout_widthPercent="15%"/>
        <TextView
            android:id="@+id/textView"
            style="@style/map_button"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="0dp"
            app:layout_heightPercent="8%"
            app:layout_widthPercent="30%"
            app:layout_marginTopPercent="1%"
            android:layout_centerHorizontal="true"
            android:text="@string/registerRequest"/>
        <Button
            android:id="@+id/register_button"
            style="@style/Transparent_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:background="@color/base_color"
            android:gravity="center"
            android:onClick="onClick"
            android:text="@string/registerRequest"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_heightPercent="10%"
            app:layout_marginTopPercent="45%" app:layout_widthPercent="90%"/>


    </android.support.percent.PercentRelativeLayout>

</LinearLayout>