<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.wuxindianqi.administrator.chargingstationapp.view.fragment.UserLogoutFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.percent.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/top_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:background="#ff44aacc"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="100%"/>

        <TextView
            android:layout_width="0.3dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:background="@color/gainsboro"
            app:layout_marginTopPercent="22%"
            app:layout_heightPercent="6%"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0.3dp"
            android:background="@color/gainsboro"
            app:layout_marginTopPercent="30%"
            app:layout_widthPercent="100%"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0.3dp"
            android:background="@color/gainsboro"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="40%"
            app:layout_widthPercent="100%"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0.3dp"
            android:background="@color/gainsboro"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="50%"
            app:layout_widthPercent="100%"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0.3dp"
            android:background="@color/gainsboro"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="60%"
            app:layout_widthPercent="100%"/>

        <Button
            android:id="@+id/login_user_button"
            style="@style/Transparent_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:onClick="onClick"
            android:text="@string/login"
            android:textSize="25sp"
            app:layout_marginTopPercent="20%"
            app:layout_heightPercent="10%"
            app:layout_widthPercent="50%"/>
        <Button
            android:id="@+id/register_user_button"
            style="@style/Transparent_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:onClick="onClick"
            android:layout_alignParentRight="true"
            android:text="@string/registerRequest"
            android:textSize="25sp"
            app:layout_marginTopPercent="20%"
            app:layout_heightPercent="10%"
            app:layout_widthPercent="50%"/>
        <Button
            android:id="@+id/enter_check_updata_button"
            style="@style/Transparent_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:text="@string/checkupdata"
            android:textSize="20sp"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="30%"
            app:layout_heightPercent="10%"
            app:layout_widthPercent="100%"/>
        <Button
            android:id="@+id/enter_version_info_button"
            style="@style/Transparent_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:text="@string/version"
            android:textSize="20sp"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="40%"
            app:layout_heightPercent="10%"
            app:layout_widthPercent="100%"/>
        <Button
            android:id="@+id/enter_guanyu_info_button"
            style="@style/Transparent_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:text="@string/aboutwoostar"
            android:textSize="20sp"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="50%"
            app:layout_heightPercent="10%"
            app:layout_widthPercent="100%"/>



    </android.support.percent.PercentRelativeLayout>
</FrameLayout>
