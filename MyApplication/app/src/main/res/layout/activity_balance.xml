<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.percent.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/whitesmoke"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/top_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:background="#ff44aacc"
            app:layout_heightPercent="10%"
            app:layout_widthPercent="100%"/>
        <Button
            android:id="@+id/back_button_recharge"
            style="@style/Button_background_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="onClick"
            android:text="@string/back"
            android:textSize="20sp"
            app:layout_heightPercent="8%"
            app:layout_marginLeftPercent="1%"
            app:layout_marginTopPercent="1%" app:layout_widthPercent="15%"/>
        <TextView
            android:id="@+id/textView"
            style="@style/Button_background_title"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="0dp"
            app:layout_heightPercent="8%"
            app:layout_widthPercent="30%"
            app:layout_marginTopPercent="1%"
            android:layout_centerHorizontal="true"
            android:text="@string/mybalance"/>
        <TextView
            android:id="@+id/balance_text_balance"
            style="@style/Text_black"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="0"
            android:textSize="20sp"
            app:layout_heightPercent="13%"
            app:layout_marginTopPercent="10%"
            app:layout_widthPercent="50%"
        />
        <Button
            android:id="@+id/recharge_button"
            style="@style/Transparent_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white"
            android:gravity="center"
            android:onClick="onClick"
            android:text="@string/recharge"
            android:textSize="20sp"
            app:layout_heightPercent="10%"
            app:layout_marginTopPercent="24%"
            app:layout_widthPercent="100%"/>


    </android.support.percent.PercentRelativeLayout>

</LinearLayout>