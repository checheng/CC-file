<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.wuxindianqi.administrator.chargingstationapp.view.fragment.UserLoginFragment">

    <android.support.percent.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/top_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:background="#ff44aacc"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="100%"/>

        <android.support.v7.widget.RecyclerView

            app:layout_marginLeftPercent="5%"
            android:id="@+id/my_recyclerview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/top_background"
            app:layout_heightPercent="50%"
            app:layout_marginTopPercent="2%"
            app:layout_widthPercent="98%"
        />

        <Button
            android:id="@+id/quit_user"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/my_recyclerview"
            android:layout_centerHorizontal="true"
            android:background="@color/base_color"
            android:text="@string/quitRespond"
            android:textColor="@color/white"
            app:layout_heightPercent="7%"
            app:layout_marginTopPercent="2%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="5%"
            app:layout_widthPercent="100%"
        />

    </android.support.percent.PercentRelativeLayout>

</FrameLayout>
