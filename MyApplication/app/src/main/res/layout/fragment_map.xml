<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.wuxindianqi.administrator.chargingstationapp.view.fragment.MapFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.percent.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <com.amap.api.maps.TextureMapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
        />
        <View
            android:id="@+id/top_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:background="@color/base_color"
            app:layout_heightPercent="9%"
            app:layout_widthPercent="100%"/>
        <Button
            android:id="@+id/show_button"
            style="@style/Button_background_title"
            android:text="显示"
            app:layout_heightPercent="8%"
            app:layout_marginLeftPercent="1%"
            app:layout_marginTopPercent="1%"
            app:layout_widthPercent="15%"/>
        <EditText
            android:id="@+id/user_input"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_toRightOf="@id/show_button"
            android:background="@color/white"
            app:layout_heightPercent="6%"
            app:layout_marginRightPercent="3%"
            app:layout_marginTopPercent="2%"
            app:layout_widthPercent="50%"
        />
        <Button
            android:id="@+id/add_button"
            style="@style/Button_background_title"
            android:layout_toEndOf="@id/user_input"
            android:text="@string/colection"
            app:layout_heightPercent="8%"
            app:layout_marginTopPercent="1%"
            app:layout_widthPercent="15%"/>
        <Button
            android:id="@+id/list_button"
            android:layout_toEndOf="@id/add_button"
            style="@style/Button_background_title"
            android:text="@string/list"
            app:layout_heightPercent="8%"
            app:layout_marginTopPercent="1%"
            app:layout_widthPercent="15%"/>

    </android.support.percent.PercentRelativeLayout>


</FrameLayout>
