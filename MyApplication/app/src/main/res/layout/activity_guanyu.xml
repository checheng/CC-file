<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.percent.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/whitesmoke"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/top_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:background="#ff44aacc"
            app:layout_heightPercent="10%"
            app:layout_widthPercent="100%"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0.3dp"
            android:background="@color/gainsboro"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="20%"
            app:layout_widthPercent="100%"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0.3dp"
            android:background="@color/gainsboro"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="30%"
            app:layout_widthPercent="100%"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0.3dp"
            android:background="@color/gainsboro"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="40%"
            app:layout_widthPercent="100%"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0.3dp"
            android:background="@color/gainsboro"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="50%"
            app:layout_widthPercent="100%"/>
        <Button
            android:id="@+id/back_button_wuxin"
            style="@style/Button_background_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="onClick"
            android:text="@string/back"
            android:textSize="20dp"
            app:layout_heightPercent="8%"
            app:layout_marginLeftPercent="1%"
            app:layout_marginTopPercent="1%" app:layout_widthPercent="15%"
            android:layout_alignBaseline="@+id/wuxin_textView"
            android:layout_alignBottom="@+id/wuxin_textView"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/wuxin_textView"
            style="@style/Button_background_title"
            android:textSize="25dp"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="0dp"
            app:layout_heightPercent="8%"
            app:layout_widthPercent="30%"
            app:layout_marginTopPercent="1%"
            android:layout_centerHorizontal="true"
            android:text="@string/about"/>
        <Button
            android:id="@+id/about_guanyu_button"
            style="@style/Transparent_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:text="@string/aboutwoostar"
            android:textSize="20sp"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="10%"
            app:layout_heightPercent="10%"
            app:layout_widthPercent="100%"/>
        <Button
            android:id="@+id/about_version_button"
            style="@style/Transparent_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:text="@string/version"
            android:textSize="20sp"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="20%"
            app:layout_heightPercent="10%"
            app:layout_widthPercent="100%"/>
        <Button
            android:id="@+id/about_advice_button"
            style="@style/Transparent_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:text="@string/advice"
            android:textSize="20sp"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="30%"
            app:layout_heightPercent="10%"
            app:layout_widthPercent="100%"/>
        <Button
            android:id="@+id/about_check_updata_button"
            style="@style/Transparent_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:text="@string/checkupdata"
            android:textSize="20sp"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="40%"
            app:layout_heightPercent="10%"
            app:layout_widthPercent="100%"/>


    </android.support.percent.PercentRelativeLayout>

</LinearLayout>